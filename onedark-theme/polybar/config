[module/updates]
type = custom/script
exec = sudo xbps-install -S > /dev/null 2>&1; ~/.config/polybar/polybar-themes/onedark-theme/polybar/scripts/xbps-updates
format = <label>
interval = 4600 
label =󰏖 %output% 
label-padding = 0
;label-foreground = #BF616A
